# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database (Production)
# Use connection pooling URL for serverless environments
DATABASE_URL="postgresql://user:password@production-host:5432/library_management?sslmode=require&pgbouncer=true"

# NextAuth (Production)
# IMPORTANT: Use your actual production URL
NEXTAUTH_URL="https://your-app.vercel.app"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-here-minimum-32-characters"

# Google OAuth (Production)
# Create separate OAuth app for production
GOOGLE_CLIENT_ID="your-production-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-production-client-secret"

# AI Features (Optional)
# Choose one provider
AI_PROVIDER="openai"  # or "claude"

# OpenAI (Optional)
OPENAI_API_KEY="sk-proj-your-production-openai-key"

# Anthropic Claude (Optional)
# ANTHROPIC_API_KEY="sk-ant-your-production-anthropic-key"

# Security Notes:
# 1. Never commit this file to version control
# 2. Use strong, unique secrets for production
# 3. Rotate secrets regularly
# 4. Use environment-specific OAuth credentials
# 5. Enable SSL for database connections
